#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# shellcheck source=/dev/null
source "${DIR}/include"

grep  -E "is ${BLACKHOLE_IP4_REGEX}" "${BLACKLIST}"
echo ""
echo "Tracking LIVE (^C to abort)"
echo ""
tail -f "${BLACKLIST}" | grep --color -E "is ${BLACKHOLE_IP4_REGEX}"
