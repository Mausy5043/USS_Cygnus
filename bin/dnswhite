#!/usr/bin/env bash

SITE_TO_ALLOW="${1}"

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# shellcheck source=/dev/null
source "${SCRIPT_DIR}/include"

if [[ ! -d "${CYGNUS_CONFIG_DIR}" ]]; then
    mkdir -p "${CYGNUS_CONFIG_DIR}"
fi

ALLOWREGEX4="${BLACKHOLE_IP4_REGEX} ${SITE_TO_ALLOW}$"
ALLOWREGEX6="${BLACKHOLE_IP6_REGEX} ${SITE_TO_ALLOW}$"
#test000007.ru

echo "Matching hosts:"
grep -E "${ALLOWREGEX4}" "${BLACKHOSTSLIST}"
grep -E "${ALLOWREGEX6}" "${BLACKHOSTSLIST}"
echo ""
echo "Matching domains:"
grep -E "${ALLOWREGEX4}" "${BLACKDOMSLIST}"
grep -E "${ALLOWREGEX6}" "${BLACKDOMSLIST}"

exit 1

# Remove from sites blacklist
TMP_FILE4=$(mktemp /tmp/dnswhite.4.XXXXXX)
TMP_FILE6=$(mktemp /tmp/dnswhite.6.XXXXXX)
grep -vE "${ALLOWREGEX4}" "${BLACKHOSTSLIST}" > "${TMP_FILE4}"
grep -vE "${ALLOWREGEX6}" "${TMP_FILE4}" > "${TMP_FILE6}"
sudo mv "${TMP_FILE6}" "${BLACKHOSTSLIST}"
sudo rm "${TMP_FILE4}"
sudo chmod 744 "${BLACKHOSTSLIST}"
sudo chown root:wheel "${BLACKHOSTSLIST}"

# Remove from domains blocklist
TMP_FILE4=$(mktemp /tmp/dnswhite.4.XXXXXX)
TMP_FILE6=$(mktemp /tmp/dnswhite.6.XXXXXX)
grep -vE "${ALLOWREGEX4}" "${BLACKDOMSLIST}" > "${TMP_FILE4}"
grep -vE "${ALLOWREGEX6}" "${TMP_FILE4}" > "${TMP_FILE6}"
sudo mv "${TMP_FILE6}" "${BLACKDOMSLIST}"
sudo rm "${TMP_FILE4}"
sudo chmod 744 "${BLACKDOMSLIST}"
sudo chown root:wheel "${BLACKDOMSLIST}"

# Remember this site
echo "${SITE_TO_ALLOW}" >> "${CYGNUS_CONFIG_DIR}/white.list"

sudo pluginctl dns
