#!/usr/bin/env bash

SITE_TO_BLOCK="${1}"

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# shellcheck source=/dev/null
source "${DIR}/include"

if [[ ! -d "${CYGNUS_CONFIG_DIR}" ]]; then
    mkdir -p "${CYGNUS_CONFIG_DIR}"
fi

whiteout4="${BLACKHOLE_IP4_REGEX} ${SITE_TO_BLOCK}$"
whiteout6="${BLACKHOLE_IP6_REGEX} ${SITE_TO_BLOCK}$"
TMP_FILE4=$(mktemp /tmp/dnsblack.4.XXXXXX)
TMP_FILE6=$(mktemp /tmp/dnsblack.6.XXXXXX)

echo "Matches found:"
grep -E "${whiteout4}" "${BLACKLIST}"
grep -E "${whiteout6}" "${BLACKLIST}"

# Remember this whiteout
echo ${SITE_TO_BLOCK} >> ~/.config/cygnus/black.list

# Add to blacklist
grep -vE "${whiteout4}" "${BLACKLIST}" > "${TMP_FILE4}"
grep -vE "${whiteout6}" "${TMP_FILE4}" > "${TMP_FILE6}"
sudo mv "${BLACKLIST}" "${BLACKLIST}.bak"
sudo mv $TMP_FILE6 "${BLACKLIST}"
sudo rm $TMP_FILE4
sudo chmod +r "${BLACKLIST}"
sudo chown root:root "${BLACKLIST}"

sudo pluginctl dns
